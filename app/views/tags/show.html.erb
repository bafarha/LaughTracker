<div class="main tag-show">
	<div class="container">
		<div class="tag">
			<h1><%= @tag.title %></h1>
		</div>
		<%= link_to "Tags", "/tags" %>
		<div class="tag-jokes">
			<h2>Jokes</h2>
			<% @jokes.each do |j| %>
			<div class="joke-title">
				<p><a href='<%= joke_path(j) %>'><%= j.title %></a></p>
				<!--<%= link_to "See Joke", joke_path(j) %>-->
			</div>
			<% end %>
			<%= form_for (@tag) do |f| %>
			<%= f.label :Add_Jokes %>
			<%= collection_select :tag, :joke_ids, Joke.all, :id, :title, prompt: true %>
			<div class="actions">
				<%= f.submit "Add" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
