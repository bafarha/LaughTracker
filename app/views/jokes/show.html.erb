<div class="main">
	<div class="container">
		<p id="notice"><%= notice %></p>
		<h1><%= @joke.title %></h1>
		<small><em><%= "#{time_ago_in_words(@joke.created_at)} ago" %></em></small>
		<div class="edit">
			<small><em><strong><%= link_to "Edit", edit_joke_path(@joke) %></strong></em></small>
		</div>
		<div class="tags">
			<small><em><strong><%= link_to "Tags", "/tags" %></strong></em></small>
			<% @tags.each do |t| %>
			<small><em><a href="<%= tag_path(t) %>">#<%= t.title %></a></em></small>
			<% end %>
		</div>
		<div class="jokes">
			<p><%= @joke.content %></p>
		</div>
		<%= link_to "Jokes", "/jokes" %>
	</div>
</div>