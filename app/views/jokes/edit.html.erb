<div class='main'>
  <div class='container'>
    <h1>Edit Your Joke!</h1>

    <%= form_for(@joke) do |f| %>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :tag_list, "Tags (separated by commas)" %><br>
        <%= f.text_field :tag_list %>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>
      <div class="actions">
        <p><%= f.submit "Update Joke", class: "btn btn-send"%></p>
        <p><%= link_to "Cancel", jokes_path, class: "btn btn-cta" %></p>
      </div>
    <% end %>
  </div>
</dvi>