<% if current_user %>
	<h4>Add some notes:</h4>
	<%= form_for ([@joke, @joke.notes.build]) do |f| %>
		<p>
			<%= f.label :Notes %><br>
			<%= f.text_area :body %>
		</p>
		<!--<p>
			<%= f.label :rating %><br>
			<%= f.text_field :rating %>
		</p>-->
		<p>
			<%= f.label :rating, "Laugh-O-Meter" %>
			<div class="rating"></div>
		</p>
		<p>
			<%= f.submit "Add Note" %>
		</p>
	<% end %>
<% end %>

<div class="joke-notes">
	<% @notes.each do |note| %>
		<div class="row">
			<hr>
			<p><small><em><%= "#{(note.created_at.strftime("%b %-d, %Y"))}" %></em></small></p>
			<div class="rated" data-score="<%= note.rating %>"></div>
			<p><%= note.body %></p>
		</div>
	<% end %>
</div>

<%= will_paginate @notes %>

