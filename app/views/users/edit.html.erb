<div class="main">
	<div class="container">
		<h1>Your Info</h1>
		<%= form_for(@user) do |f| %>
			<div class="field">
				<%= f.label :fist_name %><br>
				<%= f.text_field :first_name %>
			</div>
			<div class="field">
				<%= f.label :last_name %><br>
				<%= f.text_field :last_name %>
			</div>
			<div class="field">
				<%= f.label :email %><br>
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.label :password %><br>
				<%= f.password_field :password, :placeholder => "Password" %>
			</div>
			<div class="field">
				<%= f.submit "Update", class: "btn-submit" %>
			</div>
			<%= link_to "Cancel", user_path %>
		<% end %>
	</div>
</div>