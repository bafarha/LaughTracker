<!DOCTYPE html>
<html>
<head>
  <title>LaughTracker</title>
  
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>  
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic|Puritan:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="navbar">
	<div id="user_name">
		<% if current_user %>
        <a href='<%= user_path(@user) %>'><%= current_user.first_name %></a>
      <% else %>
        <a>LaughTracker</a>
      <% end %>
	</div>
    <ul class="nav navbar-nav">
    <% if current_user %>
    	<%= link_to 'Jokes', jokes_path %>
    	<%= link_to 'Create', new_joke_path %>
      <%= link_to 'Home', root_path %>
      <%= link_to "Logout", logout_path, method: "delete" %>
    <% else %>
        <%= link_to "Login", 'login' %></a>
		    <%= link_to "Sign Up", 'signup' %></a>
    <% end %>
    </ul>
</div>
<%= yield %>
	
</body>
</html>
